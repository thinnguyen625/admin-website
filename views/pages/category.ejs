  <script>
    $("#btn-add-category").click(function () {
        $("#my-form").attr('action', '/category/create');
        $('#txt-category-name').attr('placeholder', '');
        $('#txt-category-code').attr('placeholder', '');
        $('#txt-category-image').attr('src', 'images/imageHolder.png');
    })

    $(".btn-edit-category").click(function () {
        var id = $(this).data('id');
        $("#my-form").attr('action', '/category/edit?id=' + id);
        var name = $(this).parent().parent().find('#category-name').text();
        var code = $(this).parent().parent().find('#category-code').text();
        var image = $(this).parent().parent().find('#category-image').attr('src');

        $('#txt-category-name').attr('placeholder', name);
        $('#txt-category-code').attr('placeholder', code);
        $('#txt-category-image').attr('src', image);
        $('#txt-category-id').attr('value', id);

    })

    var loadFile = function (event) {
        var image = document.getElementById('txt-category-image');
        image.src = URL.createObjectURL(event.target.files[0]);
    };


</script>

