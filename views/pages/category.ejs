    <!-- Phần form hiển thị để sửa thông tin -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"
    style="display: none;">
    <form class="edit-form" id="my-form" method="POST" enctype="multipart/form-data">>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header header-panel">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myModalLabel" style="font-weight: bold">Thông tin danh mục</h4>
          </div>
          <div class="modal-body">
            <div class="col-md-12 col-log-12">
              <div class="form-group row">
                <label class="col-lg-2 col-md-2 col-form-label">Tên</label>
                <div class="col-lg-10 col-md-10">
                  <input class="form-control ng-untouched ng-pristine ng-valid name" type="text" name='name'
                    id="txt-category-name" required>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-lg-2 col-md-2 col-form-label">Mã</label>
                <div class="col-lg-10 col-md-10">
                  <input class="form-control ng-untouched ng-pristine ng-valid name" type="text" name='code'
                    id="txt-category-code" required>
                </div>
              </div>
              <label class="col-form-label">Hình ảnh</label>

              <div class="form-group">
                <section class="thumbnail-container">
                  <div class="thumbnail-container--content image-box" for="image-upload">
                    <input accept="image/jpeg, image/gif, image/png" id="image-upload" multiple=""
                      style="display: none;" type="file" name="image" onchange="loadFile(event)" required>
                    <label class="style-pointer" for="image-upload" style="max-height: 100%; max-width: 100%">
                      <img class="img-dialog" src="images/imageHolder.png" id="txt-category-image">
                    </label>
                  </div>
                </section>
              </div>

              <div class="form-group">
                <input type="text" name='id' id="txt-category-id" style="height: 0px; width: 0px; visibility: hidden;">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
              <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
          </div>
        </div>
      </div>
    </form>
